<ul>
  <% @article.errors.full_messages.each do | msg | %>
    <li>
      <%= msg %>
    </li>
  <% end %>
</ul>
<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <%= form.submit %>
<% end %>